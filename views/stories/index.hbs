<h1 class="pageTitle relative max-w-max text-gray-600 text-2xl font-bold mt-4 mb-8">Only the best stories</h1>

{{#if stories}}
  <div class="max-w-7xl mx-auto grid grid-cols-3 gap-6">
 {{#each stories }}
       <div class="divide-y-2  divide-solid divide-gray-300 py-6 px-6 shadow-md rounded-md ring-1 ring-gray-50 relative bg-gray-50">
       <div class="mb-4">
        {{{editIcon user._id ../loggedUser _id}}}
        <h4 class="text-center text-2xl text-gray-700 font-semibold tracking-wider mb-3 capitalize">{{title}}</h4>
          <p class="tracking-wide text-md mb-8 max-w-full h-20" style="word-break:break-word">{{{truncate (stripTags body)}}}</p>
          <div class=" py-1 bg-gray-200 rounded-full pr-4 flex items-center w-3/5 mx-auto cursor-pointer">
             <img src="{{user.image}}" class="h-10 w-10 rounded-full"alt="user_image">
             <a href="/stories/user/{{user._id}}" class="text-sm font-semibold text-red-400 ml-4">{{user.displayName}}</a>
          </div>
       </div>
       <div>
         <a href="stories/{{_id}}" class="mt-4 block text-center font-medium text-lg mx-auto px-3 py-2 bg-gray-200 rounded shadow">Read More</a>
       </div>
     </div>
 {{/each}} 
</div>
{{else}}
   <h1>No public story available :(</h1>
{{/if}}
