<h1 class="text-gray-900 text-2xl mb-4 font-semibold">Dashboard</h1>
<h3 class="text-gray-600 text-xl">Welcome <span class="name relative">{{name}}</span> !</h3>
<div class="mx-auto py-6 px-12 max-w-3xl mt-12">
  {{#if stories}}
  <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Title
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Created At
          </th>
          <th scope="col" class="px-6 py-3">
            Edit
          </th>
          <th scope="col" class="relative px-6 py-3">
            Delete
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {{#each stories }}
        <tr >
          <td class="px-6 w-36 py-4 whitespace-nowrap">
            <a href="/stories/{{_id}}">

                <h5 class="text-sm font-normal  text-gray-700 capitalize tracking-wide">
                  {{title}}
                </h5>
            </a>
          </td>
          
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
              {{status}}
            </span>
          </td>
          <td class="px-6  py-4 whitespace-nowrap tracking-wider">
            <div class="text-sm text-gray-900">{{formatDate createdAt}}</div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
           <a href="/stories/edit/{{_id}}" class="block rounded text-white font-medium py-1 px-3 bg-indigo-400  hover:bg-indigo-700">Edit</a>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
            <form action="/stories/delete/{{_id}}?_method=DELETE" method="POST">
                <button type="submit" class="bg-red-400 rounded px-3 py-1 font-medium text-white hover:bg-red-700">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <p class="text-5xl text-gray-500 tracking-wide  mb-8 whitespace-nowrap">You have no stories created...</p>
  <p class="text-2xl text-gray-500 tracking-wide  mb-8 whitespace-nowrap ml-2"> Start adding some...</p>


  {{/if}}
</div>
{{> addButton}}